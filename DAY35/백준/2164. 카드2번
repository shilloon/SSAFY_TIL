#include <iostream>
#include <queue>

using namespace std;

int main() {

	int N;

	cin >> N;

	queue<int> card;

	for (int i = 1; i <= N; i++)
		card.push(i);

	int temp = 0;

	while (card.size() > 1) {

		card.pop();

		temp = card.front();
		
		card.pop();
		card.push(temp);
		
	}

	cout << card.front();

	return 0;

}
