bool binary_search(vector<int>& arr, int target) {

	int start = 0;
	int end = arr.size() - 1;

	while (start <= end) {
		// 중앙 값 찾기
		int mid = start + (end - start) / 2;

		// 중앙 값과 같을 경우 해당 index 반환
		if (arr[mid] == target)
			return mid;
		
		// 중앙 값이 target보다 작을 경우 오른쪽 구역 탐색
		else if (arr[mid] < target)
			start = mid + 1;

		// 중앙 값이 target보다 클 경우 왼쪽 구역 탐색
		else
			end = mid - 1;
	}
	// 값을 못찾을 경우 -1 반환
	return -1;
}
