#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {

	ios::sync_with_stdio(false);
	cin.tie(NULL);

	int N;
	cin >> N;
	
	vector<int> arr;
	for (int i = 0; i < N; i++) {
		int num;
		cin >> num;
		arr.push_back(num);
	}

	sort(arr.begin(), arr.end());

	vector<int> accumulated_sum_arr(N, 0);
	int arr_sum = 0;
	accumulated_sum_arr[0] = arr[0];
	for (int i = 1; i < N; i++) {

		arr_sum = accumulated_sum_arr[i - 1] + arr[i];

		accumulated_sum_arr[i] = arr_sum;

	}

	int result = 0;

	for (int i = 0; i < N; i++) {
		result += accumulated_sum_arr[i];
	}

	cout << result << endl;

	return 0;

}
