T = int(input())

for tc in range(1, T+1):
    k = int(input())
    m = int(input())

    matrix = [[0] * (m+1) for _ in range(k+1)]
    for i in range(m+1):
        matrix[0][i] = i

    for i in range(1, k+1):
        for j in range(1, m+1):
            matrix[i][j] = matrix[i][j-1] + matrix[i-1][j]

    print(matrix[k][m])
