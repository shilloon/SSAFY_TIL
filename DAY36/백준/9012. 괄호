#include <iostream>
#include <stack>

using namespace std;

int main() {

	int N;
	cin >> N;

	for (int test_case = 0; test_case < N; test_case++) {

		string s;
		stack<char> bracket;
		cin >> s;

		bool is_valid = true;

		for (int i = 0; i < s.size(); i++) {
			if (s[i] == '(')
				bracket.push(s[i]);

			else if (s[i] == ')') {
				if (bracket.empty()) { 
					is_valid = false;
					break;
				}
				else {
					bracket.pop();
				}
			}
		}

		if (!bracket.empty())
			is_valid = false;

		if (is_valid)
			cout << "YES" << endl;
		else
			cout << "NO" << endl;
	}
	return 0;
}
