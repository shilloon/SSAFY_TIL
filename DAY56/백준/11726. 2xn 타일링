#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

const int MOD = 10007;

int main() {

	ios::sync_with_stdio(false);
	cin.tie(NULL);

	int N;
	cin >> N;

	if (N == 1) {
		cout << 1 << endl;
		return 0;
	}

	vector<int> dp(N + 1);

	dp[1] = 1;
	dp[2] = 2;

	for (int i = 3; i <= N; i++) {

		dp[i] = (dp[i - 1] + dp[i - 2]) % MOD;

	}

	cout << dp[N] << endl;

}
