T = int(input())

for t in range(1, T+1):

    N = int(input())

    num_arr = list(map(int, input().split()))

    max_num = num_arr[0]
    min_num = num_arr[0]

    min_index = 0
    max_index = 0
    
    # 최댓값, 최솟값 구하기
    for i in range(1, N):

        max_num = max(max_num, num_arr[i])
        min_num = min(min_num, num_arr[i])

    # 최솟값 처음 위치 구하기
    for i in range(N):

        if min_num == num_arr[i]:
            min_index = i
            break
    # 최댓값 마지막 위치 구하기
    for i in reversed(range(N)):

        if max_num == num_arr[i]:
            max_index = i
            break
    
    # 두 위치 절댓값으로 만들기
    if max_index < min_index:
        temp = max_index
        max_index = min_index
        min_index = temp

    result = max_index - min_index

    print(f'#{t} {result}')
