for t in range(1, 11):

    N = int(input())

    Building_height = list(map(int, input().split()))

    Building_view_lights = 0

    # 건물의 양쪽은 0으로 채워지므로 +2 ~ 리스트의 -2값까지 반보
    for i in range(2, N - 2):

        second_max_building = 0

        # i를 제외한 양쪽 건물의 가장 큰 건물 높이 구하기
        for j in range(i-2, i+3):

            if j == i:
                continue

            else:
                if second_max_building < Building_height[j]:
                    second_max_building = Building_height[j]

        # 조망권 있는 빌딩 구하기
        if second_max_building < Building_height[i]:

            Building_view_lights += (Building_height[i] - second_max_building)


    print(f'#{t} {Building_view_lights}')
