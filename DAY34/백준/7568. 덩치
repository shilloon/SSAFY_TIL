#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;


int main() {

	int N;

	cin >> N;

	vector<vector<int>> kidney(N);
	vector<int> ranking;

	for (int i = 0; i < N; i++) {
		
		int weight, height;
		cin >> weight >> height;
		kidney[i].push_back(weight);
		kidney[i].push_back(height);

	}

	for (int i = 0; i < N; i++) {
		int rank = 1;
		for (int j = 0; j < N; j++) {
			if (i == j)
				continue;
			if (kidney[j][0] > kidney[i][0] && kidney[j][1] > kidney[i][1])
				rank++;
		}
		ranking.push_back(rank);
	}

	for (int i = 0; i < N; i++)
		cout << ranking[i] << " ";

	return 0;
}
