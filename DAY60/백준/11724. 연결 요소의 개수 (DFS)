#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int N, M;
vector<int> adj[1001];
bool visited[1001];

void dfs(int u) {

	visited[u] = true;

	for (int v : adj[u]) {

		if (!visited[v]) {

			dfs(v);

		}

	}

}

int main()
{

	ios::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	cin >> N >> M;

	for (int i = 0; i < M; i++) {

		int u, v;
		cin >> u >> v;
		adj[u].push_back(v);
		adj[v].push_back(u);

	}

	int count = 0;

	for (int i = 1; i <= N; i++) {

		if (!visited[i]) {

			count++;
			dfs(i);
		}

	}

	cout << count << endl;

	return 0;

}
