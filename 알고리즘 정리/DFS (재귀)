def dfs(node, graph, visited):
    visited.add(node)
    for nxt in graph[node]:
        if nxt not in visited:
            dfs(nxt, graph, visited)

graph = {1:[2, 3], 2:[1], 3:[1,4], 4:[3], 5:[]}
visited = set()
components = 0

for node in graph:
    if node not in visited:
        dfs(node, graph, visited)
        components += 1

print(components)
